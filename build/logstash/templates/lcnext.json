{
  "template": "lcnext-*",
  "settings": {
	"number_of_shards" : 3,
	"number_of_replicas" : 1
  },
   "mappings": {
      "logging": {
         "properties": {
            "geoip": {
                "dynamic": true,
					"properties": {
						"ip": {
							"type": "ip"
						},
							"latitude": {
							"type": "half_float"
						},
						"location": {
							"type": "geo_point"
						},
						"longitude": {
							"type": "half_float"
						}
				}
			}
         }
      }
   }
}